                    <div class="col-md-4">
                        
                        <img src="<%=campgrounds.images.length ? campgrounds.images[0].url:"" %>" class="img-fluid" alt="">
                    </div>
                
                    <div class="col-md-8">
                        <div class="card-body">
                         <h5 class="card-title"><%=campgrounds.title%></h5>
                         <h6 class="card-subtitle mb-2 text-muted"><%=campgrounds.location%></h6>
                          <p class="card-text"><%=campgrounds.description%></p>
                          <a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary">View <%=campgrounds.title%></a>
                     </div>
                </div>
              </div>
            </div>
        <% }; %>
    
